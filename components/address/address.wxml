<wxs module="wxsJS">
  var join = function(arr = []) {
    var isEmpty = arr.every(function(item) {
      console.log('every')
      return !item
    })
    return isEmpty ? '请选择地区' : arr.join('/')
  }
  module.exports.join = join
</wxs>


