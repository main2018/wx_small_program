<van-popup 
  show="{{popupShow}}" 
  position="bottom"
  bind:click-overlay="hidePopup"
  >
  <view class='address-edit-item'>
    <text>姓名</text><input placeholder="这是一个可以自动聚焦的input" focus/>
  </view>
  <view class='address-edit-item'>
    <text>电话</text><input placeholder="这是一个可以自动聚焦的input" focus type='number'/>
  </view>
  <view class='address-edit-item'>
    <text>地区</text>
    <picker
      mode="region"
      bindchange="bindRegionChange"
      value="{{region}}"
      custom-item="{{customItem}}"
      >
      <view class="picker">
        {{wxsJS.join(region)}}
      </view>
    </picker>
  </view>
  <view class='address-edit-item'>
    <text>详细地址</text><input placeholder="这是一个可以自动聚焦的input" focus type='number'/>
  </view>
  <view class='address-edit-item'>
    <text>邮政编码</text><input placeholder="这是一个可以自动聚焦的input" focus type='number' maxlength="2"/>
  </view>
  <view class='address-edit-item'>
    <text>设为默认收货地址</text><switch checked="{{false}}" bindchange="switchChange" />
  </view>
  
  <button type='warn'>保存</button>
  <button>删除</button>
</van-popup>
