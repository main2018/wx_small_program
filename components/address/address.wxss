/* components/address/address.wxss */
.current-address{
  background-color: #fff;
}
.current-address, .address-item{
  padding: 20rpx;
  display: flex;
  align-items: center;
  line-height: 1.5;
  /* font-family: Condiment; */
}
.current-address-content, .address-item-content{
  flex: 1;
  margin: 0 20rpx 0 10rpx;
}
.address-item text{
  display: block;
}
.current-address-address, .address-item-address{
  font-size: var(--font-small);
  color: var(--text-l);
}

.address-edit-item{
  margin: 0 20rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.address-edit-item:not(:last-of-type){
  border-bottom: 1rpx solid var(--border-color);
}
/* .address-edit-item>input, .address-edit-item>picker{
  margin-left: 40rpx;
} */
.address-edit-item>text{
  flex: 0 0 150rpx;
}
.address-edit-item:last-of-type>text{
  flex: 1;
}
.address-btn{
  margin: 40rpx 20rpx;
}
